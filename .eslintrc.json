{
	"root": true,
	"extends": [
		"wikimedia/client-es5",
		"wikimedia/jquery",
		"wikimedia/mediawiki",
		"wikimedia/jsduck"
	],
	"globals": {
		"L": "readonly",
		"Kartographer": "readonly",
		"Set": "readonly"
	},
	"rules": {
		"max-len": "off",
		"mediawiki/class-doc": "warn",
		"mediawiki/valid-package-file-require": "warn",
		"prefer-regex-literals": "warn",
		"no-shadow": "warn",
		"no-loss-of-precision": "warn",
		"es-x/no-block-scoped-variables": "warn",
		"es-x/no-set": "warn"
	}
}
